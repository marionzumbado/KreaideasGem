<h2>OLvido su contraseña?</h2>

<%= form_for(resource, :as => resource_name, :url => member_password_path(), :html => { :method => :post }) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :email %><br />
  <%= f.email_field :email, :autofocus => true %></div>

  <div><%= f.submit "Enviarme instrucciones para recuperar contraseña" %></div>
<% end %>

<%= render "devise/shared/links" %>
